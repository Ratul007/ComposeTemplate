<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Compose" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">#D81B60</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.Splash" parent="Theme.SplashScreen">
        <item name="android:windowSplashScreenBackground">@color/white</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/lottie</item>
        <item name="android:windowSplashScreenAnimationDuration">5000</item>
        <item name="postSplashScreenTheme">@style/Theme.Compose</item>
    </style>

</resources>